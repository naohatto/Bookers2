  <div class="col-md-3">
    <h2>User info</h2>
    <div class="img"><%= image_tag user.get_profile_image(100,100) %></div>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
	        <th>name</th>
	        <th><%= user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <p><%= link_to "edit user", edit_user_path(user), class: "btn btn-outline-secondary" %></p>
    </div>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: newbook do |f| %>
      <div class="form-group">
        <h4>Title</h4>
          <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <h4>Opinion</h4>
          <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>