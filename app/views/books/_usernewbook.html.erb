  <h1>User info</h1>
  <div class="col-lg-4">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= image_tag user.get_profile_image(100,100) %></th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>name</td>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <td>introduction</td>
          <td><%= user.introduction %></td>
        </tr>
      </tbody>
          <% if user == current_user %>
            <p><%= link_to "Edit Profile", edit_user_path(user) %></p>
          <% end %>
    </div>
    <h1>New book</h1>
    <%= form_with model: newbook do |f| %>

      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Opinion</h4>
        <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
  </div>